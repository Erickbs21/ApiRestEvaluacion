{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "MiBancoSettings": {
    "MaxTransactionAmount": 100000,
    "MinimumAge": 18,
    "MaxDailyTransactions": 10,
    "EnableNotifications": true
  },
  "ExternalServices": {
    "BankingServiceUrl": "https://api.external-bank.com",
    "NotificationServiceUrl": "https://api.notifications.com",
    "Timeout": "00:00:30"
  }
}
